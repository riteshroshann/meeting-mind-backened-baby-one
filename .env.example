# Production Environment Variables for AI Meeting Assistant Backend
# Copy this to .env file and fill in your actual values

# Django Configuration
DJANGO_SECRET_KEY=django-insecure-change-me-in-production
DEBUG=False
FRONTEND_URL=https://your-frontend-domain.com

# Bhashini API Configuration
BHASHINI_AUTH_TOKEN=your_bhashini_auth_token
BHASHINI_USER_ID=your_bhashini_user_id

# Gemini AI Configuration  
GEMINI_API_KEY=your_gemini_api_key

# Optional: Alternative API Key Names (the system will try these if primary keys are not found)
# ULCA_API_KEY=your-ulca-api-key
# BHASHINI_API_KEY=your-bhashini-api-key

# Deployment Platform Settings
# For Railway.app
RAILWAY_STATIC_URL=/static/
RAILWAY_VOLUME_MOUNT_PATH=/data

# For Render.com
RENDER_EXTERNAL_HOSTNAME=your-app-name.onrender.com

# For Vercel
VERCEL_URL=your-app-name.vercel.app
